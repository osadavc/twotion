{
  "name": "Twotion | Write Twitter Threads With Ease",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["https://twotion.osadavidath.com", "<all_urls>"],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Twotion"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/main.ts"]
    }
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "externally_connectable": {
    "matches": ["*://localhost/*", "*://twotion.osadavidath.com/*"]
  },
  "permissions": ["cookies", "tabs"]
}
